<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lo_service_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rectangle_radius_100_transparent_gray"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="16dp"
            android:paddingVertical="17dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_service_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_term"
                android:textSize="14sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_service_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_agreement_unselected"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lo_privacy_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rectangle_radius_100_transparent_gray"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp"
            android:paddingVertical="17dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/lo_service_term">

            <TextView
                android:id="@+id/tv_privacy_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_term"
                android:textSize="14sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_privacy_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_agreement_unselected"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lo_marketing_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rectangle_radius_100_transparent_gray"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp"
            android:paddingVertical="17dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/lo_privacy_term">

            <TextView
                android:id="@+id/tv_marketing_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/marketing_term"
                android:textSize="14sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_marketing_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_agreement_unselected"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lo_diary_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rectangle_radius_100_transparent_gray"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp"
            android:paddingVertical="17dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/lo_marketing_term">

            <TextView
                android:id="@+id/tv_diary_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diary_term"
                android:textSize="14sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_diary_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_agreement_unselected"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/complete_terms"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:letterSpacing="0.02"
            android:gravity="center"
            android:background="@drawable/btn_rectangle_radius_100"
            android:paddingVertical="19dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/lo_diary_term" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>